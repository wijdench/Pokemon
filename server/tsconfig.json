{
    "compilerOptions": {
        "module": "commonjs",
        "types": ["jest", "node"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./*"
    ],
    "exclude": [
        "./node_modules/*"
    ]
}